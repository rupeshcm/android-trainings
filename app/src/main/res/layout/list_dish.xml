<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="dish"
            type="com.coppermobile.mysamplemvvmdatabindinglivedata.data.Dish" />

        <variable
            name="main"
            type="com.coppermobile.mysamplemvvmdatabindinglivedata.activities.MainActivity" />
    </data>

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_clicked"
        android:onClick="@{()->main.onItemPressed(dish)}"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10"
        android:paddingStart="@dimen/size_10"
        android:paddingTop="@dimen/size_10">

        <ImageView
            android:id="@+id/iv_dish"
            imageURL="@{dish.dishImage}"
            android:layout_width="@dimen/size_100"
            android:layout_height="@dimen/size_100"
            android:layout_marginEnd="@dimen/size_10"
            android:contentDescription="@string/image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_dish"
            android:maxLines="1"
            android:text="@{dish.dishName}"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_18" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="@dimen/size_5"
            android:layout_toEndOf="@+id/iv_dish"
            android:maxLines="2"
            android:text="@{dish.dishDescription}"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/font_13" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_dish"
            android:layout_alignStart="@+id/tv_name"
            android:text='@{@string/rupees_symbol+" "+dish.dishPrice}'
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:layout_below="@+id/iv_dish"
            android:layout_marginTop="@dimen/size_10"
            android:background="@color/colorGrey" />

    </RelativeLayout>
</layout>
